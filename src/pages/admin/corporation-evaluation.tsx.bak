    { name: 'Financial Management', icon: TrendingUp, maxScore: 6 },
    { name: 'Water Management', icon: Users, maxScore: 6 },
    { name: 'Community Engagement', icon: Award, maxScore: 6 },
    { name: 'Innovation & Sustainability', icon: Star, maxScore: 6 }
